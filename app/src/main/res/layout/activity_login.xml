<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".authetication.LoginActivity">

    <LinearLayout
        android:id="@+id/LoginParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/appbg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoImg"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@android:drawable/ic_menu_myplaces" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_edittext"
            android:padding="4dp"
            android:text="Login"
            android:textColor="@color/teal_700"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/loginEmailE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:background="@drawable/round_edittext"
            android:drawableLeft="@drawable/ic_fi_rr_envelope"
            android:drawablePadding="6dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textWebEmailAddress|textPassword"
            android:padding="8dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/loginPasswordE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:background="@drawable/round_edittext"
            android:drawableLeft="@drawable/ic_fi_rr_lock"
            android:drawablePadding="6dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/loginB"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/ic_launcher_background"
            android:text="Login"
            android:textColor="@color/white"
            app:cornerRadius="15dp" />

        <LinearLayout
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/newUserT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_edittext"
            android:padding="2dp"
            android:text="New User?"
            android:textColor="@color/teal_700"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
